<UserControl x:Class="Jarloo.Sojurn.Controls.TopmostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="16" Width="16">
    
    <UserControl.Resources>
        <BitmapImage UriSource="/Images/Unpinned.png" x:Key="Unpinned"/>
        <BitmapImage UriSource="/Images/Pinned.png" x:Key="Pinned"/>
    </UserControl.Resources>
    
    <Grid >
        <Image Name="imgIcon" Stretch="Fill" Height="16" Width="16"  Cursor="Hand" Source="{StaticResource Unpinned}" VerticalAlignment="Top" HorizontalAlignment="Left" ToolTip="Pin window." />
    </Grid>
</UserControl>
